---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Customer Reviews - Paw-some Pet Toys" description="Read glowing reviews from pet parents who love our playful toys and helpful tips for keeping pets happy and entertained!">
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-amber-400 to-rose-500 py-20 md:py-32">
    <div class="absolute inset-0 bg-[url('/patterns/bone-pattern.svg')] opacity-10 bg-repeat"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
